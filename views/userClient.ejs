<%- include("partials/header"); %>
<h1 class="headings">Hello <%= name %></h1>




<form class="mb-3" action="/userClient" method="post">
    <label for="">Title</label>
    <input class="form-control" type="text" name="postTitle" placeholder="Title for your query." autocomplete="off" required>
    <label for="">Query</label>
    <textarea class="form-control" name="postBody" cols="100" rows="10" placeholder="Enter your legal query here." required></textarea>
    <label for="">Phone</label>
    <input class="form-control" type="number" name="postPhone" placeholder="Our lawyers will contact you on this number." autocomplete="off" required>
    <br>
    <button class="btn btn-primary" type="submit" >Post</button>
    <a href="#" class="btn btn-secondary">Logout</a>
</form>

<%- include("partials/footer"); %>