<%- include("partials/header"); %>
<h1 class="headings">Hello Client</h1>

<form class="mb-3" action="/userClient" method="post">
    <label for="">Title</label>
    <input class="form-control" type="text" name="postTitle" placeholder="Title of your query." autocomplete="off" required>
    <label for="">Query</label>
    <textarea class="form-control" name="postBody" cols="100" rows="10" placeholder="Post your legal query here." required></textarea>
    <label for="">Phone</label>
    <input class="form-control" type="number" name="postPhone" placeholder="Our lawyers will contact your shortly." autocomplete="off" required>
    <br>
    <button class="btn btn-primary" type="submit" >Post</button>
</form>

<%- include("partials/footer"); %>